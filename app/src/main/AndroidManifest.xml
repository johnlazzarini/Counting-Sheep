<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.johnlazzarini.countingsheep" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdditionActivity"
            android:label="Addition" />
        <activity
            android:name=".SubtractionActivity"
            android:label="Subtraction" />
        <activity
            android:name=".MultiplicationActivity"
            android:label="Multiplication" />
        <activity
            android:name=".DivisionActivity"
            android:label="Division" />
        <activity
            android:name=".AddNaturalsActivity"
            android:label="Adding Natural Numbers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AddIntegersActivity"
            android:label="Adding Integers"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SubtractNaturalsActivity"
            android:label="Subtracting Natural Numbers"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SubtractIntegersActivity"
            android:label="Subtracting Integers"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MultiplyNaturalsActivity"
            android:label="Multiplying Natural Numbers"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MultiplyIntegersActivity"
            android:label="Multiplying Integers"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DivideNaturalsActivity"
            android:label="Dividing Natural Numbers"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DivideIntegersActivity"
            android:label="Dividing Integers"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>