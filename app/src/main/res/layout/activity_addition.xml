<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.johnlazzarini.countingsheep.AdditionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:text="Learn how to Add!"
        android:gravity="center_vertical"
        android:background="#aabbdd"
        android:paddingLeft="16dp"
        />
    <TextView
        android:id="@+id/add_naturals_id"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="22sp"
        android:textColor="#ffffff"
        android:text="Test Yourself: Adding Natural Numbers"
        android:gravity="center_vertical"
        android:background="#22aa44"
        android:paddingLeft="16dp"
        />
    <TextView
        android:id="@+id/add_integers_id"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:textSize="22sp"
        android:text="Test Yourself: Adding Integers"
        android:gravity="center_vertical"
        android:background="#ff55ff"
        android:textColor="#ffffff"
        android:paddingLeft="16dp"
        />

</LinearLayout>
